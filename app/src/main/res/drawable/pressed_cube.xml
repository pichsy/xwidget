<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="false">

        <layer-list>

            <item>
                <shape android:shape="rectangle">

                    <size android:width="120dp" android:height="50dp" />
                    <corners android:radius="30dp" />
                    <gradient android:startColor="#00f" android:endColor="#f0f"/>

                </shape>
            </item>
            <item android:bottom="3dp">
                <shape android:shape="rectangle">
                    <size android:width="120dp" android:height="50dp" />
                    <corners android:radius="30dp" />
                    <gradient android:startColor="#04047B" android:endColor="#470047"/>
                </shape>
            </item>

        </layer-list>

    </item>

    <item android:state_pressed="true">
        <layer-list>

            <item>
                <shape android:shape="rectangle">

                    <size android:width="120dp" android:height="50dp" />
                    <corners android:radius="30dp" />
                    <gradient android:startColor="#92D54F" android:endColor="#C9540A"/>

                </shape>
            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <size android:width="120dp" android:height="50dp" />
                    <corners android:radius="30dp" />
                    <gradient android:startColor="#4F310B" android:endColor="#453B34"/>
                </shape>
            </item>

        </layer-list>

    </item>

</selector>