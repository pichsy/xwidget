<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PorterShapeImageView">
        <!-- 图标资源  -->
        <attr name="xp_shine_icon_image" format="reference" />
    </declare-styleable>

    <attr name="ShineButtonStyle" format="reference" />

    <!--  ShineButton  -->
    <declare-styleable name="ShineButton">
        <!-- 未选中时的填充颜色，默认是#AAAAAA -->
        <attr name="xp_shine_normal_color" format="color" />
        <!-- 选中时的填充颜色，默认R.attr.colorAccent  -->
        <attr name="xp_shine_checked_color" format="color" />
        <!-- 是否使用随机颜色，默认是false  -->
        <attr name="xp_shine_allow_random_color" format="boolean" />
        <!-- 发散动画持续的时间，默认是 1500ms -->
        <attr name="xp_shine_animation_duration" format="integer" />
        <!-- 点击动画持续的时间，默认是 200ms -->
        <attr name="xp_shine_click_animation_duration" format="integer" />
        <!-- 是否开启闪烁，默认是false -->
        <attr name="xp_shine_enable_flashing" format="boolean" />
        <!-- 发散距离的倍数，必须大于1，默认是1.5 -->
        <attr name="xp_shine_distance_multiple" format="float" />
        <!-- 发散点的数量，默认是7 -->
        <attr name="xp_shine_count" format="integer" />
        <!-- 发散点起始的大小，默认是按钮宽度的一半 -->
        <attr name="xp_shine_size" format="dimension" />
        <!-- 发散点的转角度数，默认是20 -->
        <attr name="xp_shine_turn_angle" format="float" />
        <!-- 小发散点的偏移角度，默认是20 -->
        <attr name="xp_shine_small_shine_offset_angle" format="float" />
        <!-- 小发散点的颜色，默认是#666666 -->
        <attr name="xp_shine_small_shine_color" format="color" />
        <!-- 大发散点的颜色，默认是选中时的填充颜色 -->
        <attr name="xp_shine_big_shine_color" format="color" />
    </declare-styleable>

</resources>