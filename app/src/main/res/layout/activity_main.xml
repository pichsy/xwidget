<?xml version="1.0" encoding="utf-8"?>
<com.pichs.common.widget.view.XScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200">

    <com.pichs.common.widget.flowlayout.XFlowLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="16dp"
        app:xp_childHorizontalSpacing="16dp"
        app:xp_childVerticalSpacing="16dp"
        tools:context=".MainActivity">

        <com.pichs.common.widget.view.XStatusBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0ff">

            <com.pichs.common.widget.space.XStatusBarSpace
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f00" />

        </LinearLayout>

        <com.pichs.common.widget.cardview.XCardButton
            android:id="@+id/btn1"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:minHeight="10dp"
            android:text="点击设置字体"
            android:textColor="#fff"
            android:textSize="20sp"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:xp_backgroundGradientEndColor="#f8e"
            app:xp_backgroundGradientStartColor="#d94"
            app:xp_borderGradientEndColor="#00BCD4"
            app:xp_borderGradientOrientation="vertical"
            app:xp_borderGradientStartColor="#FF5722"
            app:xp_borderWidth="4dp"
            app:xp_radius="10dp" />

        <com.pichs.common.widget.view.XButton
            android:id="@+id/normalBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#F49595"
            android:minHeight="10dp"
            android:padding="10dp"
            android:text="普通粗细" />

        <com.pichs.common.widget.view.XButton
            android:id="@+id/closeFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#F49595"
            android:minHeight="10dp"
            android:padding="10dp"
            android:text="关闭字体变化" />


        <com.pichs.common.widget.view.XButton
            android:id="@+id/openFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#F49595"
            android:minHeight="10dp"
            android:padding="10dp"
            android:text="打开字体变化" />

        <com.pichs.common.widget.view.XTextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#AFEFE0"
            android:text="忽略全局字体变化"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn1"
            app:xp_ignoreGlobalTypeface="true" />

        <com.pichs.common.widget.shinebutton.ShineButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            app:xp_shine_big_shine_color="#F10C0C"
            app:xp_shine_checked_color="#0195EB"
            app:xp_shine_count="10"
            app:xp_shine_enable_flashing="true"
            app:xp_shine_icon_image="@drawable/ic_start"
            app:xp_shine_normal_color="#C71FEA"
            app:xp_shine_small_shine_color="#3CC63C" />

        <com.pichs.common.widget.checkbox.XCheckBox
            android:id="@+id/xchekbox"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="#9D9DC4"
            app:xp_checked="false"
            app:xp_checked_src="#6532E6"
            app:xp_clickable="false"
            app:xp_disabledAlpha=".3"
            app:xp_pressedAlpha=".7"
            app:xp_radius="22dp" />

        <com.pichs.common.widget.cardview.XCardTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:xp_pressedTextColor="#ddd" />

<!--        <com.pichs.common.widget.roundview.XRoundTextView-->
<!--            android:id="@+id/tv_round"-->
<!--            android:layout_width="180dp"-->
<!--            android:layout_height="80dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:background="#09f"-->
<!--            android:clickable="true"-->
<!--            android:gravity="center"-->
<!--            android:text="我就是深"-->
<!--            android:textColor="#F4F4F4"-->
