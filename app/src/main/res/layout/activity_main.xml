<!--            app:xp_radius="1dp" />-->

        <com.pichs.common.widget.cardview.XCardButton
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:background="#673AB7"
            android:gravity="center"
            android:onClick="changeRadius"
            android:text="改变角度"
            android:textColor="#fff"
            app:xp_pressedAlpha=".7" />

        <com.pichs.common.widget.view.XImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:clickable="true"
            android:src="@mipmap/ic_launcher"
            app:xp_pressedAlpha="0.5" />

        <com.pichs.common.widget.cardview.XCardConstraintLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="1"
            android:onClick="changeRadiusBg"
            app:xp_backgroundGradientEndColor="#3B58F5"
            app:xp_backgroundGradientOrientation="TL_BR"
            app:xp_backgroundGradientStartColor="#E18181"
            app:xp_hideRadiusSide="bottom"
            app:xp_pressedAlpha="0.5"
            app:xp_radius="20dp">


            <com.pichs.common.widget.view.XTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card系列具有圆角剪裁效果Card系列具有圆角剪裁效果Card系列具有圆角剪裁效果Card系列具有圆角剪裁效果Card系列具有圆角剪裁效果Card系列具有圆角剪裁效果Card系列具有圆角剪裁效果"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.pichs.common.widget.cardview.XCardConstraintLayout>

        <TextView
            android:id="@+id/triple_color"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="三色渐变"
            android:textColor="#00f"
            android:textSize="16sp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="按压"
            android:clickable="true"
            android:background="@drawable/pressed_cube"
            android:textColor="#00f"
            android:textSize="16sp" />

        <com.pichs.common.widget.view.XLinearLayout
            android:id="@+id/ll_colors"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:gravity="center"
            android:text="三色渐变"
            android:textColor="#fff"
            android:textSize="16sp"
            app:xp_backgroundGradientColors="#f00,#00f0,#ff00f0"
            app:xp_backgroundGradientOrientation="horizontal"
            app:xp_pressedBackgroundGradientColors="#fff,#54f400" />

        <com.pichs.common.widget.roundview.XRoundLinearLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:id="@+id/round_layout"
            app:xp_backgroundGradientOrientation="vertical"
            app:xp_backgroundGradientColors="#00f,#ff0"
            app:xp_cubeFrontGradientColors="#f00"
            app:xp_cubeFrontHeight="3dp"
            app:xp_pressedAlpha=".8"
            app:xp_pressedCubeFrontGradientColors="#081"
            app:xp_pressedBackgroundGradientColors="#0ff,#0f0"
            app:xp_pressedCubeFrontHeight="2dp"
            app:xp_radius="25dp" />

        <com.pichs.common.widget.cardview.XCardLinearLayout
            android:layout_width="50dp"
            android:layout_height="100dp"
            app:xp_backgroundGradientColors="#f0f,#f00"
            app:xp_backgroundGradientOrientation="vertical"
            app:xp_radius="10dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="300dp" />

    </com.pichs.common.widget.flowlayout.XFlowLayout>

</com.pichs.common.widget.view.XScrollView>
