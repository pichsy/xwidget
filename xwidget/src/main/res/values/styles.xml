<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="XP_Animation_Scale" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_in_center</item>
        <item name="android:windowExitAnimation">@anim/scale_out_center</item>
    </style>

    <style name="XP_Animation_PopUpMenu_Center">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="XP_Animation_PopUpMenu_Left">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="XP_Animation_PopUpMenu_Right">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="XP_Animation_PopDownMenu_Center">
        <item name="android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="XP_Animation_PopDownMenu_Left">
        <item name="android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="XP_Animation_PopDownMenu_Right">
        <item name="android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="XP_Animation_Bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_bottom_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/translate_bottom_exit_anim</item>
    </style>

    <style name="XP_Animation_End" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_right_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/translate_right_exit_anim</item>
    </style>

    <style name="XP_Animation_Start" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_left_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/translate_left_exit_anim</item>
    </style>

    <style name="XP_Animation_Top" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_top_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/translate_top_exit_anim</item>
    </style>

</resources>