<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="xp_clickable" format="boolean" />

    <!--  SmoothCheckBox  -->
    <declare-styleable name="XSmoothCheckBox">
        <!-- 切换动画的持续时间，默认是300ms-->
        <attr name="android:checked" />
        <attr name="xp_cbox_duration" format="integer" />
        <!-- 未选中时边框宽度，默认是宽度的10分之一-->
        <attr name="xp_cbox_stroke_width" format="dimension" />
        <!-- 对勾颜色，默认是Color.WHITE-->
        <attr name="xp_cbox_color_tick" format="color" />
        <!-- 选中时的填充颜色，默认是R.attr.colorAccent-->
        <attr name="xp_cbox_color_checked" format="color" />
        <!-- 未选中时的填充颜色，默认是Color.WHITE-->
        <attr name="xp_cbox_color_unchecked" format="color" />
        <!-- 未选中时边框颜色，默认是#DFDFDF-->
        <attr name="xp_cbox_color_unchecked_stroke" format="color" />

        <attr name="xp_pressedAlpha" />
        <attr name="xp_disabledAlpha" />
        <attr name="android:alpha" />

        <!--   按压按钮变大/小   -->
        <attr name="xp_pressedScale" />
        <attr name="xp_disabledScale" />
    </declare-styleable>
    <attr name="SmoothCheckBoxStyle" format="reference" />

</resources>