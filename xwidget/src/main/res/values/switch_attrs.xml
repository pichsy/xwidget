<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--开关按钮-->
    <declare-styleable name="XSwitchButton">
        <!--滑动块的图片资源-->
        <attr name="xp_swb_thumbDrawable" format="reference" />
        <!--滑动块的颜色-->
        <attr name="xp_swb_thumbColor" format="color|reference" />
        <!--    增加状态系列    -->
        <attr name="xp_swb_thumbPressedColor" format="color|reference" />
        <attr name="xp_swb_thumbCheckedColor" format="color|reference" />
        <attr name="xp_swb_thumbDisabledColor" format="color|reference" />

        <!--滑动块的Margin, 默认2dp-->
        <attr name="xp_swb_thumbMargin" format="dimension|reference" />
        <attr name="xp_swb_thumbMarginTop" format="dimension|reference" />
        <attr name="xp_swb_thumbMarginBottom" format="dimension|reference" />
        <attr name="xp_swb_thumbMarginLeft" format="dimension|reference" />
        <attr name="xp_swb_thumbMarginRight" format="dimension|reference" />
        <!--滑动块的宽度, 默认20dp-->
        <attr name="xp_swb_thumbWidth" format="dimension|reference" />
        <!--滑动块的高度-->
        <attr name="xp_swb_thumbHeight" format="dimension|reference" />
        <!--滑动块的边角-->
        <attr name="xp_swb_thumbRadius" format="dimension|reference" />
        <!--开关背景的边角-->
        <attr name="xp_swb_backgroundRadius" format="dimension|reference" />
        <!--开关的背景图片资源-->
        <attr name="xp_swb_backgroundDrawable" format="reference" />
        <!--开关的背景颜色-->
        <attr name="xp_swb_backgroundColor_switchOn" format="color|reference" />
        <attr name="xp_swb_backgroundColor_switchOff" format="color|reference" />
        <!--当开关进行切换的时候，背景是否渐变过渡-->
        <attr name="xp_swb_fadeBackground" format="boolean" />
        <!--开关和滑动块所占宽度的比例，默认是1.8f，必须大于1-->
        <attr name="xp_swb_thumbRangeRatio" format="float" />
        <!--切换时，动画持续的时间 默认250ms-->
        <attr name="xp_swb_animationDuration" format="integer" />
        <!--开关开时的文字-->
        <attr name="xp_swb_text_switchOn" format="string" />
        <!--开关关时的文字-->
        <attr name="xp_swb_text_switchOff" format="string" />
        <attr name="xp_swb_textThumbInset" format="dimension" />
        <!--文字多余的空间-->
        <attr name="xp_swb_textExtra" format="dimension" />
        <attr name="xp_swb_textAdjust" format="dimension" />
    </declare-styleable>

</resources>